{
  "manifest_version": 2,
  "name": "prompster",
  "version": "1.1.0",
  "description": "Slash Commands for ChatGPT",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    "static/prompts.json"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{4c90f0a5-d6fc-4454-ba8c-36c312bca623}",
      "strict_min_version": "57.0"
    }
  }
}
